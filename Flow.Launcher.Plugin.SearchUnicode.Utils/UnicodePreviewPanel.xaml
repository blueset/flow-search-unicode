<UserControl
    x:Class="Flow.Launcher.Plugin.SearchUnicode.Utils.UnicodePreviewPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="320"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <Grid x:Name="PreviewGrid" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="96" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="5 16 5 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="64"
                Style="{DynamicResource PreviewItemTitleStyle}"
                Text="{Binding Glyph, Mode=OneTime}"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <TextBlock
                Grid.Row="1"
                Margin="5 8 5 16"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Style="{DynamicResource PreviewItemTitleStyle}"
                Text="{Binding DisplayName, Mode=OneTime}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </Grid>

        <StackPanel Grid.Row="1">
            <Rectangle
                Width="Auto"
                Height="1"
                Margin="0 0 5 0"
                HorizontalAlignment="Stretch"
                Style="{DynamicResource SeparatorStyle}" />

            <Grid Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5 0 0 0"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PreviewItemSubTitleStyle}"
                    Text="Aliases"
                    TextWrapping="Wrap"
                    Visibility="{Binding AliasVisibility, Mode=OneWay}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0 0 13 0"
                    TextAlignment="Right"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PreviewItemSubTitleStyle}"
                    Text="{Binding Aliases, Mode=OneTime}"
                    TextWrapping="Wrap"
                    Visibility="{Binding AliasVisibility, Mode=OneWay}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5 0 0 0"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PreviewItemSubTitleStyle}"
                    Text="Codepoint"
                    TextWrapping="Wrap" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0 0 13 0"
                    TextAlignment="Right"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PreviewItemSubTitleStyle}"
                    Text="{Binding Codepoint, Mode=OneTime}"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="5 0 0 0"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PreviewItemSubTitleStyle}"
                    Text="Category"
                    TextWrapping="Wrap" />
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="0 0 13 0"
                    TextAlignment="Right"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PreviewItemSubTitleStyle}"
                    Text="{Binding Category, Mode=OneTime}"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="5 0 0 0"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PreviewItemSubTitleStyle}"
                    Text="Block"
                    TextWrapping="Wrap" />
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="0 0 13 0"
                    TextAlignment="Right"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PreviewItemSubTitleStyle}"
                    Text="{Binding Block, Mode=OneTime}"
                    TextWrapping="Wrap" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
